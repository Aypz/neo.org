@model IEnumerable<NeoWeb.Models.Event>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Event";
}
@section Styles{
    <environment include="Development">
        <link rel="stylesheet" href="~/css/event.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/event.min.css" asp-append-version="true" />
    </environment>
}
<div id="eventCarousel" class="carousel slide container" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#eventCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#eventCarousel" data-slide-to="1"></li>
        <li data-target="#eventCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/event/devcon.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/event/meetup.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/event/hackathon.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#eventCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#eventCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
@* 按类别筛选 *@
<div class="mb-3 type-div text-center">
    <div class="container">
        <a class="btn btn-light btn-sm" href="~/event/index">ALL</a>
        @foreach (var item in (ViewBag.AllFeatureEvent as IEnumerable<Event>).GroupBy(p => p.Type))
        {
            <a class="btn btn-light btn-sm" href="~/event/index/@item.FirstOrDefault().Type.ToString().ToLower()">@item.FirstOrDefault().Type</a>
        }
    </div>

</div>

<div class="container text-center" style="position: relative;">

    <div class="text-left m3">
        @if (ViewBag.UserRules)
        {
            <a asp-action="Create">@Localizer["Create a new event"]</a>
        }
    </div>
    @* 按月份筛选 *@
    <div class="text-left m3">
        <a class="btn btn-light mb-1" href="~/event/index">ALL</a>
        @foreach (var item in (ViewBag.AllFeatureEvent as IEnumerable<Event>).OrderBy(p => p.StartTime).GroupBy(p => p.StartTime.Month))
        {
            <a class="btn btn-light mb-1" href="~/event/index/@item.FirstOrDefault().StartTime.Month">@item.FirstOrDefault().StartTime.Month.ToMonth()</a>
        }
        <form asp-action="search" class="float-right">
            <div class="input-group" style="width: 300px;">
                <input name="keyword" type="text" class="form-control" placeholder="Smart Contract">
                <div class="input-group-append">
                    <button class="btn btn-success" type="button">@Localizer["Search"]</button>
                </div>
            </div>
        </form>
    </div>


    <hr />
    @foreach (var item in Model.Where(p => p.EndTime >= DateTime.Now))
    {
        Html.RenderPartial("_EventPartialPage", item);
    }
    <hr />
    <div><a href="~/event/index/showall">@Localizer["Show previous events"]</a></div>
    @foreach (var item in Model.Where(p => p.EndTime < DateTime.Now))
    {
        Html.RenderPartial("_EventPartialPage", item);
    }
    <hr />
    @await Html.PartialAsync("_LoginPartial")
</div>
